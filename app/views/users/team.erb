<h1> Welcome, <%=@user.username.titleize%> </h1>

    <table class="table table-hover players">
      <thead>
        <tr>
          <th> No. </th>
          <th> Name </th>
          <th> Team </th>
          <th> Position </th>
          <th> Edit Player </th>
          <th> Delete Player </th>
        </tr>
      </thead>

      <tbody>
        <%@players.each_with_index do |player, index|%>
          <tr>
            <td> <%= index + 1%> </td>
            <td> <a href="/team/<%=player.id%>"><%=player.name%></a> </td>
            <td> <%= player.team %>  </td>
            <td> <%=player.position %> </td>
            <td> <a href="/team/<%=player.id%>/edit"> Edit Player </a></td>
            <td> <form method="post" action="/team/<%=player.id%>/delete">
              <input type="submit" value="Delete Player">
            </form> </td>
          </tr>
        <%end%>
      </tbody>
    </table>

    <p><a href="/team/new"> Create Player </a></p>
